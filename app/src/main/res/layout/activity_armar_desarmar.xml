<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aspire.projectba.Others.ArmarDesarmar">

    <TextView
        android:id="@+id/armarTudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/switchArmarTudo"
        android:layout_marginEnd="24dp"
        android:layout_toStartOf="@+id/switchArmarTudo"
        android:text="Armar Tudo"
        android:textSize="20dp" />

    <com.github.angads25.toggle.LabeledSwitch
        android:id="@+id/switchArmarTudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="15dp"
        app:colorOn="#c31432"
        app:textOff="OFF"
        app:textOn="ON" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="68dp" />

</RelativeLayout>
