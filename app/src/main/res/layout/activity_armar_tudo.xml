<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aspire.projectba.Others.ArmarTudo">


    <Button
        android:id="@+id/buttonArmar"
        android:layout_width="110dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/ic_rectangular_closed_padlock_lock_interface_symbol" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonArmar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Desarmado"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp" />


    <Button
        android:id="@+id/buttonDesarmar"
        android:layout_width="110dp"
        android:layout_height="95dp"
        android:layout_above="@+id/status"
        android:layout_toEndOf="@+id/textView4"
        android:background="@drawable/ic_open_lock" />


    <Button
        android:id="@+id/bypass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonArmar"
        android:layout_below="@+id/status"
        android:layout_marginStart="86dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/ic_logout_button" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bypass"
        android:layout_below="@+id/bypass"
        android:text="BYPASS"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp" />

</RelativeLayout>
